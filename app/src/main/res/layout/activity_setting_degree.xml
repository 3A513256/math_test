<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Beta.math_practice.setting_gender">

    <ImageView
        android:id="@+id/degree_title"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/degree_title" />

    <EditText
        android:id="@+id/name"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="52dp"
        android:autofillHints="AUTOFILL_HINT_USERNAME"
        android:hint="@string/請輸入使用者名稱"
        android:inputType="text"
        android:maxLength="10"
        app:layout_constraintBottom_toTopOf="@+id/rst"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/rst"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="70dp"
        android:text="@string/離開"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="70dp"
        android:text="@string/開始遊戲"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/easyButton"
        android:layout_width="256dp"
        android:layout_height="79dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="76dp"
        android:background="#FAFAFA"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degree_title"
        app:srcCompat="@drawable/easy" />

    <ImageButton
        android:id="@+id/hardButton"
        android:layout_width="254dp"
        android:layout_height="91dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:background="#FAFAFA"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/midButton"
        app:srcCompat="@drawable/hard" />

    <ImageButton
        android:id="@+id/midButton"
        android:layout_width="273dp"
        android:layout_height="94dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="69dp"
        android:background="#FAFAFA"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easyButton"
        app:srcCompat="@drawable/mid" />

</androidx.constraintlayout.widget.ConstraintLayout>


